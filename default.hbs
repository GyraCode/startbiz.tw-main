<html lang="{{@site.locale}}">

<head>

  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" href="/assets/index.css" />
  <link rel="stylesheet" href="/assets/ghost.css" />
  <link rel="stylesheet" href="/assets/header.css" />
  <link rel="stylesheet" href="/assets/homepage.css" />
  <link rel="stylesheet" href="/assets/copyright.css" />
  <link rel="stylesheet" href="/assets/consult.css" />
  <link rel="stylesheet" href="/assets/contentpage.css" />
  <script src="{{asset 'built/index.js'}}" defer></script>

  <title>{{meta_title}}</title>

  {{ghost_head}}
